  print PUITS "      use model\n";
  print PUITS "      use mod_grid, only: grd\n";
  print PUITS "      use inputs\n";
  print PUITS "      use integrales\n\n";
  print PUITS "      implicit none\n";
  print PUITS "      integer i,j,jj,der_min,der_max\n\n";

  for($i=0; $i < scalar @defs; $i++) {
    print PUITS mywrap("      $defs[$i] = $defs_value[$i]",$ncols);
  }
  print PUITS "\n";

  print PUITS "      grd(1)%mattype = mattype\n";
  print PUITS "      nr => grd(1)%nr\n";

  print PUITS "      ! if (allocated(dm(1)%as))           deallocate(dm(1)%as)\n";
  print PUITS "      ! if (allocated(dm(1)%art))          deallocate(dm(1)%art)\n";
  print PUITS "      ! if (allocated(dm(1)%artt))         deallocate(dm(1)%artt)\n";
  print PUITS "      ! if (allocated(idm(1,1)%atbc))      deallocate(idm(1,1)%atbc)\n";
  print PUITS "      ! if (allocated(idm(1,1)%attbc))     deallocate(idm(1,1)%attbc)\n";
  print PUITS "      ! if (allocated(dm(1)%asi))          deallocate(dm(1)%asi)\n";
  print PUITS "      ! if (allocated(dm(1)%arti))         deallocate(dm(1)%arti)\n";
  print PUITS "      ! if (allocated(dm(1)%artti))        deallocate(dm(1)%artti)\n";
  print PUITS "      ! if (allocated(idm(1,1)%atbci))     deallocate(idm(1,1)%atbci)\n";
  print PUITS "      ! if (allocated(idm(1,1)%attbci))    deallocate(idm(1,1)%attbci)\n";
  print PUITS "      ! if (allocated(dm(1)%var_name))     deallocate(dm(1)%var_name)\n";
  print PUITS "      ! if (allocated(dm(1)%eq_name))      deallocate(dm(1)%eq_name)\n";
  print PUITS "      ! if (allocated(dm(1)%lvar))         deallocate(dm(1)%lvar)\n";
  print PUITS "      ! if (allocated(dm(1)%leq))          deallocate(dm(1)%leq)\n";
  print PUITS "      ! if (allocated(dm(1)%var_keep))     deallocate(dm(1)%var_keep)\n";
  print PUITS "      ! if (allocated(dm))                 deallocate(dm)\n\n";
  print PUITS "      allocate(dm(1))\n";
  print PUITS "      allocate(dmat(1))\n";
  print PUITS "      allocate(idm(1, 1))\n\n";
  print PUITS "      dm(1)%offset=0\n";
  print PUITS "      dm(1)%nas=$nas\n";
  print PUITS "      dm(1)%nart=$nart\n";
  print PUITS "      dm(1)%nartt=$nartt\n";
  print PUITS "      idm(1,1)%natbc=$natbc\n";
  print PUITS "      idm(1,1)%nattbc=$nattbc\n";
  print PUITS "      allocate(dm(1)%as(dm(1)%nas),dm(1)%asi(4,dm(1)%nas))\n";
  print PUITS "      dm(1)%as = 0d0; dm(1)%asi=0\n";
  print PUITS "      allocate(dm(1)%art(grd(1)%nr,nt,dm(1)%nart),dm(1)%arti(4,dm(1)%nart))\n";
  print PUITS "      dm(1)%art = 0d0; dm(1)%arti=0\n";
  print PUITS "      allocate(dm(1)%artt(grd(1)%nr,nt,nt,dm(1)%nartt),dm(1)%artti(4,dm(1)%nartt))\n";
  print PUITS "      dm(1)%artt = 0d0; dm(1)%artti=0\n";
  print PUITS "      allocate(idm(1,1)%atbc(nt,idm(1,1)%natbc),idm(1,1)%atbci(6,idm(1,1)%natbc))\n";
  print PUITS "      idm(1,1)%atbc = 0d0; idm(1,1)%atbci=0\n";
  print PUITS "      allocate(idm(1,1)%attbc(nt,nt,idm(1,1)%nattbc),idm(1,1)%attbci(6,idm(1,1)%nattbc))\n";
  print PUITS "      idm(1,1)%attbc = 0d0; idm(1,1)%attbci=0\n\n";
}
########################################################################
sub writetail{
  if ($current_equation ne "no_eq") {
    push @amat, "      end subroutine eq_$current_equation\n";
    push @imat, "      end subroutine eqi_$current_equation\n";
  } else {
    die "You seem to have no equations in $input! Aborting\n";
  }
  for ($i=0; $i < scalar @imat; $i++) {print PUITS "$isub[$i]";}
  print PUITS "      power_max=$power_max\n\n";
  print PUITS "      a_dim = nt*grd(1)%nr*dm(1)%nvar\n";
  print PUITS "      dm(1)%d_dim = a_dim\n";
  print PUITS "      call find_llmax()\n";
  print PUITS "      print*,'Dimension of problem: ',a_dim\n\n";
  print PUITS "      call find_der_range(der_min,der_max)\n";
  print PUITS "      if (allocated(dm(1)%vect_der)) deallocate(dm(1)%vect_der)\n";
  print PUITS "      allocate(dm(1)%vect_der(a_dim,der_min:der_max))\n\n";
  print PUITS "      if (.not.first_dmat) call clear_derive(dmat(1))\n";
  print PUITS "      call init_derive(dmat(1),grd(1)%r,grd(1)%nr,der_max,der_min,orderFD,dertype)\n";
  print PUITS "      first_dmat = .false.\n";
  print PUITS "      call init_var_list()\n";
  for ($i=0; $i < scalar @imat; $i++) {print PUITS "$asub[$i]";}
  print PUITS "      call integrales_clear()\n";
  print PUITS "      end subroutine init_a\n";
  for ($i=0; $i < scalar @imat; $i++) {print PUITS "$imat[$i]";}
  for ($i=0; $i < scalar @amat; $i++) {print PUITS "$amat[$i]";}
}
########################################################################
sub add_definition{
  if (scalar @list < 4) {die "Error on line $nline: missing arguments\n";}
  $list[3] = join(" ",@list[3..(scalar @list - 1)]);
  if (scalar @list > 4) {splice @list,4;}

  $list[1] =~ s/_/ /g;
  push @defs_type, $list[1];
  push @defs, $list[2];
  push @defs_value, $list[3];
}
########################################################################
sub writeinstruction{
  if (scalar @list < 2) {die "Error on line $nline: missing arguments\n";}
  $list[1] = join(" ",@list[1..(scalar @list - 1)]);
  if (scalar @list > 2) {splice @list,2;}

  $string = $list[1];
  &treat_string;
  push @amat, mywrap("      $string",$ncols);
  for($i=0;$i<$nloops;$i++) {push @amat, "      enddo\n";}
}
########################################################################
sub suppressvar{
  if (scalar @list < 2) {die "Error on line $nline: missing arguments\n";}

  for($i=1;$i<scalar @list;$i++) {
    $varname = $list[$i];
    $variable = 0;
    for($j=0;$j < scalar @varlist;$j++) {
      if ($varname eq $varlist[$j]) {$variable = $j+1;}
    }
    if ($variable == 0)
      {die "Error on line $nline: \"$varname\" unknown variable.\n";}
    print PUITS "      dm(1)%var_keep($variable) = .false.\n";
  }
}
########################################################################
sub setleq{
  if (scalar @list < 3) {die "Error on line $nline: missing arguments\n";}
  if (scalar @list > 3) 
  {
    $list[2] = join(" ",@list[2..(scalar @list - 2)]);
    splice @list,3;
  }
  $equation = 0;
  for($i=0;$i < scalar @eqlist;$i++)
  {
    if ($list[1] eq $eqlist[$i]) {$equation = $i+1;}
  }
  if ($equation == 0)
    {die "Error on line $nline: \"$list[1]\" unknown equation.\n";}

  print PUITS "      dm(1)%leq(1,$equation) = $list[2]\n";
  print PUITS "      do j=2,nt\n";
  print PUITS "        dm(1)%leq(j,$equation) = $lincr + dm(1)%leq(j-1,$equation)\n";
  print PUITS "      enddo\n";
}
########################################################################
sub setlvar{
  if (scalar @list < 3) {die "Error on line $nline: missing arguments\n";}
  if (scalar @list > 3) 
  {
    $list[2] = join(" ",@list[2..(scalar @list - 2)]);
    splice @list,3;
  }
  $variable = 0;
  for($i=0;$i < scalar @varlist;$i++)
  {
    if ($list[1] eq $varlist[$i]) {$variable = $i+1;}
  }
  if ($variable == 0)
    {die "Error on line $nline: \"$list[1]\" unknown variable.\n";}

  print PUITS "      dm(1)%lvar(1,$variable) = $list[2]\n";
  print PUITS "      do j=2,nt\n";
  print PUITS "        dm(1)%lvar(j,$variable) = $lincr + dm(1)%lvar(j-1,$variable)\n";
  print PUITS "      enddo\n";
}
########################################################################
sub readvarlist{
  if (scalar @list < 2) {die "Error on line $nline: empty variable list!\n";}
  @varlist = ();
  for($i=1;$i < scalar @list;$i++)
  {
    for($j=0;$j < scalar @varlist;$j++)
    {
      if ($list[$i] eq $varlist[$j])
        {die "Error on line $nline: repeated variable name.\n";}
    }
    push @varlist, $list[$i];
  }
  if ($nvar == 0)
    {$nvar = scalar @varlist;}
  else
    {
      if ($nvar != scalar @varlist) 
      {die "Error on line $nline: number of equations and variables differ.\n"}
    }
  print PUITS "      dm(1)%nvar=$nvar\n";
  print PUITS "      allocate(dm(1)%var_name($nvar))\n";
  for ($i=1;$i <= $nvar;$i++)
    {print PUITS "      dm(1)%var_name($i)='$varlist[$i-1]'\n";}
  print PUITS "      allocate(dm(1)%lvar(nt,$nvar))\n";
  print PUITS "      dm(1)%lvar = 0\n";
  print PUITS "      allocate(dm(1)%var_keep($nvar))\n";
  print PUITS "      dm(1)%var_keep = .true.\n";
  print PUITS "\n";
}
########################################################################
sub readeqlist{
  if (scalar @list < 2) {die "Error on line $nline: empty equation list!\n";}
  @eqlist = ();
  for($i=1;$i < scalar @list;$i++)
  {
    for($j=0;$j < scalar @eqlist;$j++)
    {
      if ($list[$i] eq $eqlist[$j])
        {die "Error on line $nline: repeated equation name.\n";}
    }
    push @eqlist, $list[$i];
  }
  if ($nvar == 0)
    {$nvar = scalar @eqlist;}
  else
    {
      if ($nvar != scalar @eqlist) 
      {die "Error on line $nline: number of equations and variables differ.\n"}
    }
  print PUITS "      allocate(dm(1)%eq_name($nvar))\n";
  for ($i=1; $i <= $nvar;$i++)
    {print PUITS "      dm(1)%eq_name($i)='$eqlist[$i-1]'\n";}
  print PUITS "      allocate(dm(1)%leq(nt,$nvar))\n";
  print PUITS "      dm(1)%leq = 0\n";
}
########################################################################
sub seteq{
  if (scalar @list < 2) {die "Error on line $nline: missing terms.\n";}
  if (scalar @list > 2) {die "Error on line $nline: too many terms.\n";}

  if ($current_equation ne "no_eq") {
    push @imat, "      end subroutine eqi_$current_equation\n";
  }
  push @amat, "      end subroutine eq_$current_equation\n";
  $equation = 0;
  for($i=0;$i < scalar @eqlist;$i++)
  {
    if ($list[1] eq $eqlist[$i]) {$equation = $i+1;}
  }
  if ($equation == 0)
    {die "Error on line $nline: \"$list[1]\" unknown equation.\n";}
  $current_equation = $list[1];
  push @asub, "      call eq_$current_equation()\n";
  push @isub, "      call eqi_$current_equation()\n";
  push @amat, "!".("-"x60)."\n";
  push @amat, "! Coupling coefficients for equation $list[1]\n";
  push @amat, "!".("-"x60)."\n";
  push @amat, "      subroutine eq_$current_equation()\n\n";
  push @amat, "      use model\n";
  push @amat, "      use inputs\n";
  push @amat, "      use integrales\n";
  push @amat, "      implicit none\n";
  push @amat, "      integer i, j, jj\n";
  push @imat, "!".("-"x60)."\n";
  push @imat, "! Indices for equation $list[1]\n";
  push @imat, "!".("-"x60)."\n";
  push @imat, "      subroutine eqi_$current_equation()\n\n";
  push @imat, "      use model\n";
  push @imat, "      use inputs\n";
  push @imat, "      implicit none\n";
}
########################################################################
sub addterm{
  if (scalar @list < 5) {die "Error on line $nline: missing terms.\n";}
  if (scalar @list > 5) 
  {
    $list[3] = join(" ",@list[3..(scalar @list - 2)]);
    splice @list,4,-1;
  }

  $power = $list[2];
  $power =~ s/w(\d*)/$1/;
  if ($power eq "") {$power = 1;}
  if ($power > $power_max) {$power_max = $power;}

  $der = $list[4];
  if ($der =~ /\^/) {
    $der =~ s/.*\^(.*)/$1/;
  }
  else {
    $der =~ s/[^']//g;
    $der = length($der);
  }

  $varname = $list[4];
  $varname =~ s/'//g;
  $varname =~ s/\^.*//;
  $variable = 0;
  for($i=0;$i < scalar @varlist;$i++)
  {
    if ($varname eq $varlist[$i]) {$variable = $i+1;}
  }
  if ($variable == 0)
    {die "Error on line $nline: \"$varname\" unknown variable.\n";}

  $string = $list[3];
  &treat_string;

  if ($list[1] eq "s")
  {
    $nas++;
    push @amat, mywrap("      dm(1)%as($nas) = $string",$ncols);
    for($i=0;$i<$nloops;$i++) {push @amat, "      enddo\n";}
    push @imat,"      dm(1)%asi(1,$nas) = $power\n";
    push @imat,"      dm(1)%asi(2,$nas) = $der\n";
    push @imat,"      dm(1)%asi(3,$nas) = $equation\n";
    push @imat,"      dm(1)%asi(4,$nas) = $variable\n";
    push @imat,"\n";
  }
  elsif ($list[1] eq "rt")
  {
    $nart++;
    push @amat, mywrap("      dm(1)%art($i_index,$j_index,$nart) = $string",$ncols);
    for($i=0;$i<$nloops;$i++) {push @amat, "      enddo\n";}
    push @imat,"      dm(1)%arti(1,$nart) = $power\n";
    push @imat,"      dm(1)%arti(2,$nart) = $der\n";
    push @imat,"      dm(1)%arti(3,$nart) = $equation\n";
    push @imat,"      dm(1)%arti(4,$nart) = $variable\n";
    push @imat,"\n";
  }
  elsif ($list[1] eq "rtt")
  {
    $nartt++;
    push @amat, mywrap("      dm(1)%artt($i_index,$j_index,$jj_index,$nartt) = $string",$ncols);
    for($i=0;$i<$nloops;$i++) {push @amat, "      enddo\n";}
    push @imat,"      dm(1)%artti(1,$nartt) = $power\n";
    push @imat,"      dm(1)%artti(2,$nartt) = $der\n";
    push @imat,"      dm(1)%artti(3,$nartt) = $equation\n";
    push @imat,"      dm(1)%artti(4,$nartt) = $variable\n";
    push @imat,"\n";
  }
  else {die "Error on line $nline: unrecognised term type.\n";}
  $prev = $list[1];

}
########################################################################
sub addtermbc{
  if (scalar @list < 6) {die "Error on line $nline: missing terms.\n";}
  if (scalar @list > 6)
  {
    $list[4] = join(" ",@list[4..(scalar @list - 2)]);
    splice @list,5,-1;
  }

  $eqloc = $list[2];

  $power = $list[3];
  $power =~ s/w(\d*)/$1/;
  if ($power eq "") {$power = 1;}
  if ($power > $power_max) {$power_max = $power;}

  $varloc = $list[5];
  $varloc =~ s/.*\((.*)\)/$1/;
  $list[5] =~ s/\(.*\)//;

  $der = $list[5];
  if ($der =~ /\^/) {
    $der =~ s/.*\^(.*)/$1/;
  }
  else {
    $der =~ s/[^']//g;
    $der = length($der);
  }

  $varname = $list[5];
  $varname =~ s/'//g;
  $varname =~ s/\^.*//;
  $variable = 0;
  for($i=0;$i < scalar @varlist;$i++)
  {
    if ($varname eq $varlist[$i]) {$variable = $i+1;}
  }
  if ($variable == 0)
    {die "Error on line $nline: \"$varname\" unknown variable.\n";}
  
  $string = $list[4];
  &treat_string;

  if ($list[1] eq "t")
  {
    $natbc++;
    push @amat, mywrap("      idm(1,1)%atbc($j_index,$natbc) = $string",$ncols);
    for($i=0;$i<$nloops;$i++) {push @amat, "      enddo\n";}
    push @imat,"      idm(1,1)%atbci(1,$natbc) = $power\n";
    push @imat,"      idm(1,1)%atbci(2,$natbc) = $der\n";
    push @imat,"      idm(1,1)%atbci(3,$natbc) = $equation\n";
    push @imat,"      idm(1,1)%atbci(4,$natbc) = $variable\n";
    push @imat,"      idm(1,1)%atbci(5,$natbc) = $eqloc\n";
    push @imat,"      idm(1,1)%atbci(6,$natbc) = $varloc\n";
    push @imat,"\n";
  }
  elsif ($list[1] eq "tt")
  {
    $nattbc++;
    push @amat, mywrap("      idm(1,1)%attbc($j_index,$jj_index,$nattbc) = $string",$ncols);
    for($i=0;$i<$nloops;$i++) {push @amat, "      enddo\n";}
    push @imat,"      idm(1,1)%attbci(1,$nattbc) = $power\n";
    push @imat,"      idm(1,1)%attbci(2,$nattbc) = $der\n";
    push @imat,"      idm(1,1)%attbci(3,$nattbc) = $equation\n";
    push @imat,"      idm(1,1)%attbci(4,$nattbc) = $variable\n";
    push @imat,"      idm(1,1)%attbci(5,$nattbc) = $eqloc\n";
    push @imat,"      idm(1,1)%attbci(6,$nattbc) = $varloc\n";
    push @imat,"\n";
  }
  else {die "Error on line $nline: unrecognised term type.\n";}

  $prev = $list[1]."bc";
}
